

.PHONY: docs docsclean

DOC_DIR=../docs
DOC_SRCDIR=../docs/src

ifeq ($(BUILD_DOCS),yes)
docs:
	$(LYX) --export pdf2 $(DOC_SRCDIR)/Master_HAL.lyx
	mv $(DOC_SRCDIR)/Master_HAL.pdf $(DOC_DIR)/HAL_User_Manual.pdf
	$(LYX) --export pdf2 $(DOC_SRCDIR)/Master_User.lyx
	mv $(DOC_SRCDIR)/Master_User.pdf $(DOC_DIR)/EMC2_User_Manual.pdf

else
docs:
	@echo "Can't build documents, missing LyX (or some other required program)"
	@false

endif

docclean:
	-rm -f $(DOC_DIR)/HAL_User_Manual.pdf
	-rm -f $(DOC_DIR)/EMC2_User_Manual.pdf
